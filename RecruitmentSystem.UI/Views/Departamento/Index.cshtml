@model IEnumerable<RecruitmentSystem.Domain.Entities.Departamento>

@{
    ViewData["Title"] = "Gestion de Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestion de Departamentos</h2>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
