@model RecruitmentSystem.Domain.Entities.Candidato

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Candidato</h3>
<h4>Esta seguro que sea eliminar esto?</h4>
<div>
    <hr />
    @if (ViewBag.ErrorMessage != null)
    {
        @await Html.PartialAsync("ErrorAlert", (string)ViewBag.ErrorMessage);
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PuestoAspira.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuestoAspira.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartamentoPerteneceId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartamentoPertenece.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalarioAspira)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalarioAspira)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecomendadoPor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecomendadoPor)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="Id" hidden />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
